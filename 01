a = int(input("Digite o primeiro número: "));
b = int(input("Digite o segundo número: "));
c = int(input("Digite o terceiro número: "));
menor = a;
if b < a and b < c:
    menor = b;
if c < a and c < b:
    menor = c;

medio = a;
if b < a and b > c:
    medio = b;
if b > a and b < c:
    medio = b;
if c < a and c > b:
    medio = c;
if c > a and c < b:
    medio = c;

maior = a;
if b > a and b > c:
    maior = b;
if c > a and c > b:
    maior = c;

print("Estes números em ordem crescente são:{},{},{}.".format(menor, medio, maior));
